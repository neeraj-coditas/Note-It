<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/noteitnavgraph"
    app:startDestination="@id/splashScreenFragment2">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.noteit.homescreen.HomeScreenFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home_screen" />
    <fragment
        android:id="@+id/splashScreenFragment2"
        android:name="com.example.noteit.splashscreen.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment2_to_homeFragment"
            app:destination="@id/homeFragment"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>
</navigation>