<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.noteit.homescreen.HomeScreenFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home_screen">
        <action
            android:id="@+id/action_homeFragment_to_editorScreenFragment"
            app:destination="@id/editorScreenFragment" >
        </action>
    </fragment>
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.noteit.splashscreen.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen">
        <action
            android:id="@+id/action_splashScreenFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:exitAnim="@android:anim/fade_out"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/editorScreenFragment"
        android:name="com.example.noteit.editorscreen.EditorScreenFragment"
        android:label="fragment_editor_screen"
        tools:layout="@layout/fragment_editor_screen">
        <action
            android:id="@+id/action_editorScreenFragment_to_saveDialogFragment"
            app:destination="@id/customDialogFragment" />
        <action
            android:id="@+id/action_editorScreenFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/editorScreenFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="note"
            app:argType="com.example.noteit.model.Note" />
    </fragment>
    <dialog
        android:id="@+id/customDialogFragment"
        android:name="com.example.noteit.editorscreen.customdialogfragment.CustomDialogFragment"
        android:label="SaveDialogFragment" />
</navigation>